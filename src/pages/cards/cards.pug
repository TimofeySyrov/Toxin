extends ../../layout/ui-kit.pug

include ../../templates/logo/logo.pug
include ../../templates/start-filter/start-filter.pug
include ../../templates/registration-card/registration-card.pug
include ../../templates/room-info-card/room-info-card.pug
include ../../templates/login-card/login-card.pug
include ../../templates/calendar/calendar.pug
include ../../templates/cutaway-room-card/cutaway-room-card.pug

block variables
  - pageTitle = 'Cards'

block content
  body.body
    main.cards-main 
      section.cards-hero
        .cards-hero__container
          .cards-hero__grid
            .cards-hero__column
              .cards-hero__item(data-component-name = "start-filter")
                +start-filter({
                  title: 'Найдём номера под ваши пожелания',
                  dateOptions: { isOpen: false },
                  dropdownOptions: {
                    isOpen: false,
                    list: [
                      { name: 'взрослые', number: 0 },
                      { name: 'дети', number: 0 },
                      { name: 'младенцы', number: 0 }
                    ]
                  },
                  buttonOptions: {
                    type: 'long',
                    text: 'подобрать номер',
                    href: 'search-room.html',
                  },
                })
              .cards-hero__item(data-component-name = "registration-card")
                +registration-card
            .cards-hero__column
              .cards-hero__item(data-component-name = "room-info-card")
                +room-info-card({
                  id: '888',
                  priceOfDay: '9 990',
                  discount: '2 179',
                  services: '300',
                  isLux: true,
                })
              .cards-hero__item(data-component-name = "login-card")
                +login-card
            .cards-hero__column
              .cards-hero__item(data-component-name = "calendar")
                +calendar
              .cards-hero__item(data-component-name = "cutaway-room-card")
                +cutaway-room-card({
                  sliders: [
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                  ],
                })
              .cards-hero__item(data-component-name = "cutaway-room-card")
                +cutaway-room-card({
                  number: 840,
                  lux: false,
                  stars: 4,
                  sliders: [
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                  ],
                })