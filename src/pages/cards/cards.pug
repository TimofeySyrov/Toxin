extends ../../layout/ui-kit.pug

include ../../templates/logo/logo.pug
include ../../templates/start-filter/start-filter.pug
include ../../templates/registration-card/registration-card.pug
include ../../templates/room-info-card/room-info-card.pug
include ../../templates/login-card/login-card.pug
include ../../templates/cutaway-room-card/cutaway-room-card.pug

block variables
  - pageTitle = 'Cards'

block content
  body.body
    main.cards-main 
      section.cards-hero
        .cards-hero__container
          .cards-hero__basic-wrap
            .start-cards-custom-column
              .start-cards-custom-column__item.start-filter-item.js-start-filter-item
                +start-filter({
                  title: 'Найдём номера под ваши пожелания',
                  dateOptions: { isOpen: false },
                  dropdownOptions: {
                    dropType: 'guests',
                    isOpenList: false,
                    list: [
                      { name: 'взрослые', number: 0 },
                      { name: 'дети', number: 0 },
                      { name: 'младенцы', number: 0 }
                    ]
                  },
                  buttonOptions: {
                    type: 'long',
                    text: 'подобрать номер',
                    href: 'search-room.html',
                  },
                })
              .start-cards-custom-column__item.registartion-card-item.js-registartion-card-item
                +registration-card
            .middle-cards-custom-column
              .middle-cards-custom-column__item.room-info-card-item.js-room-info-card-item
                +room-info-card({
                  id: '888',
                  priceOfDay: '9 990',
                  discount: '2 179',
                  services: '300',
                  isLux: true,
                })
              .middle-cards-custom-column__item.login-card-item.js-login-card-item
                +login-card
            .end-cards-custom-column
              .end-cards-custom-column__item.cutaway-room-card-item.js-cutaway-room-card-item
                +cutaway-room-card({
                  sliders: [
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                    {src: 'assets/img/rooms/room-888.jpg', alt: 'room №888'},
                  ],
                })
              .end-cards-custom-column__item.cutaway-room-card-item.js-cutaway-room-card-item
                +cutaway-room-card({
                  number: 840,
                  lux: false,
                  stars: 4,
                  sliders: [
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                    {src: 'assets/img/rooms/room-840.jpg', alt: 'room №840'},
                  ],
                })