mixin radio-buttons ({ groupName = "group-default", list = [{name: "Мужчина", check: true}, {name: "Женщина"}] }={})
  form.radio-buttons
    each val,index in list
      label.radio-buttons__item
        input.radio-buttons__input(type="radio" name= groupName value= val.name checked= (val.check ? 'checked' : val.check))
        span.radio-buttons__box #{val.name}
        