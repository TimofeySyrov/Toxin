mixin radio-buttons ({ groupName = "group-default", list = [{name: "Мужчина", check: true}, {name: "Женщина"}], tittle }={})
  .radio-buttons
    if tittle
      span.radio-buttons__tittle !{tittle}
    form.radio-buttons__form
      each val,index in list
        label.radio-buttons__item
          input.radio-buttons__input(type="radio" name= groupName value= val.name checked= val.check)
          span.radio-buttons__box #{val.name}
        