include ../text-field/text-field.pug
include ../button/button.pug

mixin login-card({ hrefLogin='search-room.html', hrefRegister='sign-up.html' }={})
  .login-card.js-login-card
    p.login-card__tittle Войти
    .login-card__user-form
      .login-card__user-form-email.js-login-card-email
        +text-field({
          placeholder: 'Email'
        })
      .login-card__user-form-password.js-login-card-password
        +text-field({
          placeholder: 'Пароль'
        })
    .login-card__sign-in.js-login-card-login-btn
      +button({
          type: 'long',
          text: 'войти',
          href: hrefLogin
        })
    .login-card__registration-container
      p.login-card__registration-tittle Нет аккаунта на Toxin?
      +button({
        type: 'border',
        text: 'создать',
        href: hrefRegister
      })
      