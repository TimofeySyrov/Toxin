include ../text-field/text-field.pug
include ../button/button.pug

mixin login-card({ hrefLogin='search-room.html', hrefRegister='sign-up.html' }={})
  .login-card.js-login-card
    p.login-card__title Войти
    .login-card__user-form
      +text-field({ placeholder: 'Email' })
      +text-field({ type: 'password', placeholder: 'Пароль' })
    .login-card__sign-in.js-login-card-login-btn
      +button({
          type: 'long',
          text: 'войти',
          href: hrefLogin
        })
    .login-card__registration-container
      p.login-card__registration-title Нет аккаунта на Toxin?
      +button({
        type: 'border',
        text: 'создать',
        href: hrefRegister
      })
      