mixin text-field({ type='text', name, placeholder='Email', disabled=false, readonly=false, isMasked }={})
  - let maskedModifier = ''

  if isMasked
    - maskedModifier = 'text-field__masked',
    - placeholder = 'ДД.ММ.ГГГГ'

  .text-field.js-text-field
    input.text-field__input.js-text-field-input(
      class= `${maskedModifier}`
      type=type
      name=name
      placeholder=placeholder
      disabled=disabled
      readonly=readonly)
                