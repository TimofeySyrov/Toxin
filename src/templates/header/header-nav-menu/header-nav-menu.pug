mixin header-nav-menu(listMenu= [])
  ul.nav-menu.js-nav-menu
    each item in listMenu
      li.nav-menu__item.js-nav-menu__item(data-with-submenu = item.submenu ? true : false)
        if item.submenu
          span.nav-menu__link(href= item.href title= item.name) !{item.name}
          i.material-icons.nav-menu__icon expand_more
          ul.submenu
            each itemSubmenu in item.submenu
              li.submenu__item
                a.submenu__link(href= itemSubmenu.href title= itemSubmenu.name) !{itemSubmenu.name}
        else
          a.nav-menu__link(href= item.href title= item.name) !{item.name}