include ../checkbox/checkbox.pug

mixin checkbox-list({ title = 'expandable checkbox list', list = [] }={})
  .checkbox-list.js-checkbox-list
    .checkbox-list__name.js-checkbox-list__name
      span.checkbox-list__tittle= title
      span.checkbox-list__arrow.js-checkbox-list__arrow expand_more
    .checkbox-list__menu.js-checkbox-list__menu
      each btn in list
        +checkbox(btn)

