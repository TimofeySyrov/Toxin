include ../calendar/calendar.pug

mixin date-dropdown({ doubleDropdowns = true, isOpen = true, placeholder='ДД.ММ.ГГГГ' }={})
    if(doubleDropdowns)
        .date-dropdown.js-date-dropdown(data-calendar-isopen= `${isOpen}`)
            .date-dropdown__arrdep
                .date-dropdown__input.date-dropdown__arrival.js-date-dropdown-arrival
                    | #{placeholder}
                    i.material-icons expand_more
                .date-dropdown__input.date-dropdown__depature.js-date-dropdown-depature
                    | #{placeholder}
                    i.material-icons expand_more
            .date-dropdown__calendar
                +calendar
    else
        .date-dropdown.js-date-dropdown
            .date-dropdown__input.date-dropdown__single.js-date-dropdown-single
                | #{placeholder}
                i.material-icons expand_more
            .date-dropdown__calendar
                +calendar